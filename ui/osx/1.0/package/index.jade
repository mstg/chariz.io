doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        base(target="_top")

        title= package.name + " â€¢ Chariz"

        link(rel="stylesheet", href="/stylia/style.css")

        meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")
        meta(name="format-detection", content="telephone=no")

        link(rel="shortcut icon", href="/icon@2x/chariz.png")
        link(rel="apple-touch-icon", href="/icon@2x/chariz.png")

        script(src="/stylia/style.js")

    body(class="package")
        .container
            .essential
                .icon
                    img(src="/icon/" + package.identifier + "/128.png", srcset="/icon/" + package.identifier + "/256.png 2x")
                a.buy-button(href="", role="button", data-price=package.price)= package.price == 0 ? "FREE" : "$" + package.price

                .moreinfo
                    label.title= package.name
                        - if (package.depiction)
                            iframe#depiction(src=package.depiction)
                        - else
                            article#description= package.description

        side
            a.link(href= package.homepage, role="button")= package.author.name + " Web Site"
            a.link(href="/support/" + package.identifier, role="button")= package.name + " Support"
            label Information
            hr
            .information
                label Category: 
                    p
                        a.section(href="ui/osx/1.0/section/" + package.section)= package.section
                label Version: 
                    p= package.version
                label Price: 
                    p= package.price == 0 ? "FREE" : "$" + package.price
                label Size: 
                    p= package.size + " bytes"
                label Seller: 
                    p Chariz Store
                br
                label Compatibility: 
                    p OS X 10.10.3 or later
            label= "More by " + package.author.name
            hr
                a#more1(href="/package/" + package.identifier)
                    img(src="/icon/" + package.identifier + "/128.png")
                    div
                        label= package.name
                        p= package.section
                a#more2(href="/package/" + package.identifier)
                    img(src="/icon/" + package.identifier + "/128.png")
                    div
                        label= package.name
                        p= package.section
                a#more3(href="/package/" + package.identifier)
                    img(src="/icon/" + package.identifier + "/128.png")
                    div
                        label= package.name
                        p= package.section
                a#more4(href="/package/" + package.identifier)
                    img(src="/icon/" + package.identifier + "/128.png")
                    div
                        label= package.name
                        p= package.section
