doctype html
html(lang="en")
    head
        base(target="_top")

        title Featured

        link(rel="stylesheet", href="/stylia/style.css")

        meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")
        meta(name="format-detection", content="telephone=no")

        link(rel="shortcut icon", href="/icon@2x/chariz.png")
        link(rel="apple-touch-icon", href="/icon@2x/chariz.png")

        script(src="/stylia/style.js")

    style
        | .carousel {display:block;overflow:hidden;margin:0 20px 0 20px;max-width:1200px;height:300px;-webkit-border-bottom-right-radius: 10px;-webkit-border-bottom-left-radius: 10px;-moz-border-radius-bottomright: 10px;-moz-border-radius-bottomleft: 10px;border-bottom-right-radius: 10px;border-bottom-left-radius: 10px;}
        | .items {width:750px;height:auto;}
        | .item {display:inline-block;width:250px;height:75px;margin-bottom:30px;}

    body
        .carousel

        .main
                label Best New Tweaks
                    a.link#sub(href="") See All
                    hr
                    .items
                        a.item(href="")
                            img(src="/icon/" + package.identifier + "/128.png")

        .side
            label Quick Links
            hr
            div
                label
                    a.link(href="chariz.signin.url") Sign In
                label
                    a.link(href="chariz.account") Account
                label
                    a.link(href="chariz.moresources") More Package Sources
                label
                    a.link(href="chariz.support") Support

            label Paid Packages
                a.link#sub(href="") See All
                hr
                div
